@model Equipment.Models.Device

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Device</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceSerialNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceSerialNumber)
                @Html.ValidationMessageFor(model => model.DeviceSerialNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceUser, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceUser)
                @Html.ValidationMessageFor(model => model.DeviceUser)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceDictionaryId, "DeviceDictionaryId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DeviceDictionaryId", String.Empty)
                @Html.ValidationMessageFor(model => model.DeviceDictionaryId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Batch, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Batch)
                @Html.ValidationMessageFor(model => model.Batch)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

