@model Equipment.Models.Device

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/EditScript.js")
@Scripts.Render("~/Scripts/jquery-ui.js")
@Styles.Render("~/Content/jquery-ui.css")
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("UserName", @HttpContext.Current.User.Identity.Name)
    <div class="form-horizontal">
        <h4>Device</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DeviceId)

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceSerialNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceSerialNumber)
                @Html.ValidationMessageFor(model => model.DeviceSerialNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceUser, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceUser)
                @Html.ValidationMessageFor(model => model.DeviceUser)
                <button type="button" class="btn btn-default" id="UserClick">Click here to add me as a user</button>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceDictionaryId, "DeviceDictionaryId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DeviceDictionaryId", String.Empty)
                @Html.ValidationMessageFor(model => model.DeviceDictionaryId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Batch, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Batch)
                @Html.ValidationMessageFor(model => model.Batch)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Start, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Start)
                @Html.ValidationMessageFor(model => model.Start)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.End, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.End)
                @Html.ValidationMessageFor(model => model.End)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
